						link="https://ude.my/UC-5a0ec579-f42c-459d-846a-4dd9eb8a78ec"
						skills={["Angular"]}
					/>
					<CertificationItem
						title="MERN eCommerce From Scratch"
						issuer="Udemy"
						time="August 2021"
						link="https://ude.my/UC-5a0ec579-f42c-459d-846a-4dd9eb8a78ec"
						skills={[
							"MongoDB",
							"React.js",
							"Mongoose ODM",
							"Node.js",
							"Express.js",
						]}
					/>
					<CertificationItem
						title="SAP Certified Development Associate - SAP Fiori Application Developer"
						issuer="SAP"
						time="March 2021"
						link="https://www.youracclaim.com/badges/21def09e-0f38-4a9f-aa55-02468b86442c?source=linked_in_profile"
						skills={["SAP Fiori", "SAPUI5"]}
					/>
				</ol>
			</div>
		</div>
	</div>
</Layout>
