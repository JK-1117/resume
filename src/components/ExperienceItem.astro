---
import SkillBullet from "./SkillBullet.astro";

export interface Props {
    time: string;
    title: string;
    company: string;
    location: string;
    activities: string[];
    skills: string[];
}

const { time, title, company, location, activities, skills } = Astro.props;
---

<li class="mb-10 ml-4">
    <div
        class="absolute w-3 h-3 bg-teal-700 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
    >
    </div>
    <time
        class="mb-1 text-sm font-normal leading-none text-gray-500 dark:text-gray-500"
    >
        {time}
    </time>
    <h3 class="text-lg font-semibold text-teal-950 dark:text-white">
        {title}
    </h3>
    <h4 class="text-teal-950">
        at <span class="font-semibold"> {company},</span>
        {location}
    </h4>
    <ul class="mb-4 text-sm font-normal list-disc px-4">
        {activities.map((activity) => <li style="pt-2">{activity}</li>)}
    </ul>
    <ul class="flex flex-wrap gap-1">
        {
            skills.map((skill) => (
                <SkillBullet style="text-sm">{skill}</SkillBullet>
            ))
        }
    </ul>
</li>
